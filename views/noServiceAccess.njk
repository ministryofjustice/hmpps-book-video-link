{% extends "./partials/layout.njk" %}
{% set title = "You do not have permission to access this service" %} 
{% block content %} 
{% from "govuk/components/button/macro.njk" import govukButton %}
<div class="govuk-grid-row govuk-body">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">You do not have permission to access this service</h1>
    <p>
      You should email
      <span> <a class="govuk-link govuk-link--no-visited-state" href='mailto:{{supportEmail}}'>{{supportEmail}}</a></span> if you work in
      a court and you think you have permission to access this service.
    </p>
    <p>If you work in a prison, you cannot access this service.</p>


    <div class="govuk-body govuk-!-margin-bottom-4">
        {{ govukButton({
            text: "Exit",
            element: 'a',
            href: '/logout',
            attributes: {
                'data-qa': 'back-to-login'
            }
        }) }}
    </div>
  </div>
</div>
{% endblock %}


